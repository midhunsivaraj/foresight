<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#00FFFFFF" android:startColor="#00FFFFFF" android:type="linear" />

                    <stroke android:width="0.33dp" android:color="#000FB1FA" />

                    <corners android:radius="0dp" />

                    <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>

            <item>
                <shape>


                    <corners android:radius="3dp" />

                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp" />
                    <stroke
                        android:width="2dp"
                        android:color="#00220B0B"/>
                </shape>
            </item>

            <item android:right="1dp" >

                <bitmap android:gravity="center_vertical|right" android:src="@drawable/drop_ic" />

            </item>

        </layer-list>

    </item>

</selector>